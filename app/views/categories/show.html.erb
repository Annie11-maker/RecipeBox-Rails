<div class="navbar navbar-expand-sm navbar-light navbar-cookbook">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <%= image_tag "logo.png" %>
</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= link_to "Home", categories_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Create a new category", new_category_path , class: "nav-link" %>
          </li>
      </ul>
    </div>
  </div>
</div>

<div class="banner">
  <%= cl_image_tag @category.photo.key, height: 300, width: 400, crop: :fill%>
  <div class="container">
    <h1><%= @category.name %></h1>
  </div>

<div class="container">
  <div class="info-top">
    <h1>Recipes</h1>
    <div class="text-end">
      <%= link_to "Add a recipe", new_category_bookmark_path(@category), class: "btn-flat" %>
    </div>
  </div>

  <div class="cards">
    <% @category.bookmarks.each do |bookmark| %>
    <div class="card-recipe" >

      <%= link_to "Delete recipe", bookmark_path(bookmark),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-flat text-end"%>

      <img src="<%= bookmark.recipe.image_url%>">
      <div class="card-recipe-description">
        <h2><%= bookmark.recipe.name %></h2>
        <p><%= bookmark.recipe.description.truncate(200) %></p>
      </div>
      <div class="card-recipe-info">
        <%= bookmark.comment %>
      </div>
      <div>
        <%= bookmark.recipe.rating %> <%= '⭐'* bookmark.recipe.rating %>
      </div>
    </div>
  <% end %>

  </div>
</div>
<%= link_to "Delete Category", category_path(@category),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?", class: "btn-flat" }%>
